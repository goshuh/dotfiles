colorscheme gosh

set fastrun
set fusehome=/tmp/mnt
set history=100
set ignorecase
set incsearch
set nohlsearch
set norunexec
set scrolloff=1
set slowfs=curlftpfs
set smartcase
set sortnumbers
set statusline=" %A %5u:%-5g %15d"
set timefmt=%Y-%m-%d/%H:%M
set trash
set trashdir=/tmp
set undolevels=100
set vicmd=nvim
set vifminfo=chistory,dhistory,phistory,shistory
set wildmenu

map <F2>     cw<c-u>
map <F10>   :mkdir<space>
map <S-F10> :touch<space>
map  E      :empty<cr>
map  C      :copy!<cr>
map  X      :move!<cr>
map  D      :delete!<cr>
map  S      :sort<cr>
map ;q      :quit<cr>
