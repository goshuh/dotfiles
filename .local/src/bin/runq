#!/usr/bin/python3

import os
import sys

import re
import time
import shlex
import signal
import datetime
import subprocess


class Test(object):
    PRIO = {'IS':  60,
            'NOT': 50,
            'AND': 40,
            'OR':  30};

    def __init__(self, env, opt):
        self.env = env
        self.opt = opt + ['']
        self.pos = 0

    def prio(self, opt):
        return Test.PRIO.get(opt, 0)

    def cons(self, cmp = ''):
        opt = self.opt[self.pos]
        self.pos += 1

        if self.pos >= len(self.opt) or cmp and opt != cmp:
            raise Exception()

    def expr(self, rbp = 0):
        opt = self.opt[self.pos]
        self.cons()

        if opt == '(':
            val = self.expr()
            self.cons(')')
        elif opt == 'NOT':
            val = not self.expr(self.prio(opt))
        else:
            val = opt in self.env

        while rbp < self.prio(self.opt[self.pos]):
            mid = self.opt[self.pos]
            self.cons()

            if mid == 'IS':
                val = self.env.get(opt, '') == self.opt[self.pos]
                self.cons()
            elif mid == 'AND':
                new = self.expr(self.prio(mid))
                val = val and new
            elif mid == 'OR':
                new = self.expr(self.prio(mid))
                val = val or  new
            else:
                raise Exception()

        return val


class Task(object):
    def __init__(self, desc, func, args, deps, envs):
        self.desc = desc
        self.func = func
        self.args = args
        self.deps = deps
        self.envs = envs

    def __call__(self):
        os.environ.update(self.envs)

        self.func(*self.args)


def find(fn):
    if not (dn := os.path.dirname(fn)):
        dn = '.'

    if not os.path.isdir(dn):
        return None

    fn = os.path.join(os.path.abspath(dn), os.path.basename(fn))

    if os.path.isfile(fn):
        return fn

    return None


def norm(env, fn):
    pat = re.compile(r'\$\{([^}]*)\}')

    while mat := pat.search(fn):
        sp = mat.span(0)
        fn = fn[:sp[0]] + env.get(mat.group(1), '') + fn[sp[1]:]

    if fn.find(os.sep) < 0:
        return fn

    old = fn.split(os.sep)
    ret = []

    # explicit root
    if fn.startswith(os.sep):
        ret.append('')

    for i in old:
        if i == '.':
            continue
        elif i == '..':
            if ret:
                ret.pop()
        elif i:
            ret.append(i)

    return os.sep.join(ret)


def test(env, cs, opts):
    last = cs[-1] if cs else True

    try:
        cs.append(Test(env, opts).expr() and last)
    except:
        cs.append(False)


def main(env, args):
    def prep(name):
        if name and name != '-':
            os.makedirs(os.path.dirname(name), exist_ok = True)

    if 'expect' in env:
        import pexpect

        if log := env.get('logfile', ''):
            prep(log)

        return pexpect.spawn(args[0], args[1:],
                    timeout = None,
                    logfile = open(log, 'wb') if log else None)

    fdo = 0
    fde = 0

    if 'daemon' in env:
        fdo = fde = os.open(os.devnull, os.O_RDWR)

    out = env.get('stdout', '')
    err = env.get('stderr', '')

    prep(out)
    prep(err)

    if out and not fdo:
        fdo = os.open(out, os.O_RDWR | os.O_CREAT, 0o644)
    if err == '-':
        fde = fdo
    elif err and not fde:
        fde = os.open(err, os.O_RDWR | os.O_CREAT, 0o644)

    if not fdo:
        fdo = 1
    if not fde:
        fde = 2

    if 'wait' in env:
        return subprocess.run(args, stdout = fdo, stderr = fde)

    if fdo != 1:
        os.dup2(fdo, 1)
    if fde != 2:
        os.dup2(fde, 2)

    if 'daemon' in env:
        if (pid := os.fork()) < 0:
            sys.exit(f'ERROR: 1st fork failed')
        elif pid > 0:
            return

        os.setsid()

        if (pid := os.fork()) < 0:
            sys.exit(f'ERROR: 2nd fork failed')
        elif pid > 0:
            return

    os.execvp(args[0], args)


def runq(env, *opts):
    real = []

    for op in opts:
        if op.startswith('+'):
            if sp := op[1:].split('='):
                env[sp[0]] = '='.join(sp[1:]) if len(sp) > 1 else '1'
        elif op:
            real.append(op)

    flag = not real or real[0].startswith('-')

    if 'cwd' in env:
        try:
            os.chdir(env['cwd'])
        except:
            env.pop('cwd')

    qemu = find('qemu')
    conf = find('qemu.cfg' if flag else real[0])

    if not qemu:
        qemu = find('bin/qemu')
    if not conf:
        conf = find('cfg/qemu.cfg')

    if not conf or not qemu:
        return

    # always provided
    env['cwd'] = os.path.dirname(os.path.abspath(conf))

    args = [qemu]
    curr = []
    cond = []

    with open(conf) as fd:
        for cs in fd:
            if cs.startswith(('#', '//')):
                continue

            if cs.startswith('IF '):
                test(env, cond, cs.split()[1:])
                continue

            if cs.startswith('ELSE'):
                if cond and (len(cond) < 2 or cond[-2]):
                    cond[-1] = not cond[-1]
                continue

            if cs.startswith('ENDIF'):
                if cond:
                    cond.pop()
                continue

            if cond and not cond[-1]:
                continue

            if cs.startswith('DEF '):
                if sp := cs.split()[1:]:
                    if sp[0] not in env:
                        env[sp[0]] = ' '.join(sp[1:])
                continue

            if not (sp := shlex.split(cs)):
                continue

            if cs.startswith((' ', '\t')):
                curr.append('='.join(list(map(lambda x: norm(env, x), sp[:2]))))

            else:
                if curr:
                    args.append(','.join(curr))
                    curr = []

                args.append('-{}'.format(sp[0]))

        if curr:
            args.append(','.join(curr))

    # especially for -S -s or -d ...
    args.extend(real[0 if flag else 1:])

    if 'gdb' in env:
        args = ['gdb', '--args'] + args

    if 'dry' in env:
        print(' '.join(args))
    else:
        return main(env, args)


def pool(core, task):
    desc = {}
    umap = {}
    dmap = {}
    pids = {}
    curr = []

    def info(s):
        while True:
            try:
                now = datetime.datetime.now()
                print(now.strftime('%m-%d %H:%M:%S'), s)
                break
            except BlockingIOError:
                pass

    def wipe(sig, frame):
        for p in pids:
            try:
                os.kill(p, signal.SIGKILL)
                os.waitpid(p, 0)
            except:
                pass

        os._exit(1)

    def wait():
        r = os.waitpid(-1, 0)
        s = pids.pop(r[0])

        try:
            v = os.waitstatus_to_exitcode(r[1])
            info(f'{s} done {v}')
        except:
            info(f'{s} error')

        for d in dmap[s]:
            umap[d].remove(s)

            if not umap[d]:
                curr.append(d)

    for t in task:
        desc[t.desc] = t

    for t in task:
        # dependency can be non-existing
        t.deps = list(filter(lambda x: x in desc, t.deps))

        umap.setdefault(t.desc, set(t.deps))
        dmap.setdefault(t.desc, set())

        if not t.deps:
            curr.append(t.desc)

        for d in t.deps:
            dmap.setdefault(d, set()).add(t.desc)

    signal.signal(signal.SIGINT,  wipe)
    signal.signal(signal.SIGTERM, wipe)

    inum = 1

    while curr:
        while curr:
            if len(pids) >= core:
                wait()

            s = curr.pop()

            time.sleep(3)

            if not (pid := os.fork()):
                info(f'{s} ({inum}/{len(desc)})')
                desc[s]()
                os._exit(0)

            pids[pid] = s
            inum += 1

        # a finished task can wake up other tasks
        while pids:
            wait()

            if curr:
                break


if __name__ == '__main__':
    envs = {}
    envs.update(os.environ)

    runq(envs, *sys.argv[1:])
