#!/usr/bin/python3

import os
import argparse
import requests

import xml.etree.ElementTree as et


def main(args):
    key = et.parse(os.path.expanduser("~/.local/state/syncthing/config.xml")) \
            .getroot() \
            .find('gui/apikey').text

    res = requests.get(f"http://localhost:{args.p}/rest/events/disk",
                       headers = { 'X-API-Key': key    },
                       params  = { 'limit':     args.n })

    ret = []

    for e in res.json():
        t = e['time'].split('T')[1].split('.')[0]
        d = e['data']
        ret.append((t, d['action'], d['path']))

    for t, a, p in reversed(ret):
        print(f'{t} {a:8} {p}')


def parse_args():
    parser = argparse.ArgumentParser(description = '')

    parser.add_argument('-p', type = int, default = 8384)
    parser.add_argument('-n', type = int, default = 25)

    return parser.parse_args()


if __name__ == "__main__":
    main(parse_args())
